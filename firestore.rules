rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== PUBLIC COLLECTIONS (No auth required) =====
    match /products/{productId} {
      allow read: if true; // Anyone can view products
      allow write: if request.auth != null && isAdmin();
    }
    
    // ===== USER AUTHENTICATION & PROFILE =====
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
    
    // ===== CLIENTS (Customer profiles) =====
    match /clients/{clientId} {
      allow read: if request.auth.uid == clientId || isAdmin();
      allow write: if request.auth.uid == clientId || isAdmin();
      allow update: if request.auth.uid == clientId;
    }
    
    // ===== ORDERS (Critical - only owner or admin) =====
    match /orders/{orderId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && validOrderData();
      allow update: if request.auth.uid == resource.data.userId || isAdmin();
      allow delete: if false; // Never delete orders, only admins can update status
    }
    
    // ===== PAYMENTS (Critical - only owner or admin) =====
    match /payments/{paymentId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && validPaymentData();
      allow update: if isAdmin(); // Only admin can mark payments as complete
    }
    
    // ===== TRANSACTION LOGS (Admin only) =====
    match /transaction_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Backend writes only
    }
    
    // ===== CART (User-specific) =====
    match /users/{userId}/cart/{cartId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // ===== WISHLIST (User-specific) =====
    match /users/{userId}/wishlist/{wishlistId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // ===== MESSAGES (Both parties or admin) =====
    match /messages/{messageId} {
      allow read: if request.auth.uid == resource.data.senderId 
        || request.auth.uid == resource.data.recipientId 
        || isAdmin();
      allow create: if request.auth != null 
        && request.resource.data.senderId == request.auth.uid
        && validMessageData();
    }
    
    // ===== HELPER FUNCTIONS =====
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function validOrderData() {
      let required = ['userId', 'billingDetails', 'items', 'total', 'status'];
      return request.resource.data.keys().hasAll(required)
        && request.resource.data.total > 0
        && request.resource.data.items.size() > 0;
    }
    
    function validPaymentData() {
      let required = ['userId', 'amount', 'phone', 'status'];
      return request.resource.data.keys().hasAll(required)
        && request.resource.data.amount > 0
        && request.resource.data.amount <= 999999;
    }
    
    function validMessageData() {
      let required = ['senderId', 'recipientId', 'message', 'timestamp'];
      return request.resource.data.keys().hasAll(required)
        && request.resource.data.message.size() > 0
        && request.resource.data.message.size() <= 5000;
    }
  }
}
